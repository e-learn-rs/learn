<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://www.springframework.org/schema/aop 
       http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

	<bean name="circle" class="org.learn.aop.model.Circle">
		<!-- <property name="name" value="Circle_name"></property> -->
	</bean>
	<bean name="triangle" class="org.learn.aop.model.Triangle">
		<property name="name" value="Triangle_name"></property>
	</bean>

	<bean name="shapeSerive" class="org.learn.aop.service.ShapeService"
		autowire="byName"></bean>
	<bean name="loggingAspect" class="org.learn.aspect.LoggingAspect"></bean>
	<bean name="xmlAspect" class="org.learn.aspect.XmlAspect"></bean>

	<aop:config>
		<aop:aspect id="xmlAspect" ref="xmlAspect">
			<aop:pointcut id="allGetters" expression="execution(* get*(..))" />
			<aop:before method="allGettersAdvice" pointcut-ref="allGetters"/> 
		</aop:aspect>
	</aop:config>

	<aop:aspectj-autoproxy />
</beans>  